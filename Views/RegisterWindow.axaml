<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="InventorySystem2.Views.RegisterWindow"
        Width="360" Height="240"
        Title="Create user"
        WindowStartupLocation="CenterOwner">

    <StackPanel Margin="16" Spacing="10">
        <TextBlock Text="Create user" FontSize="16" FontWeight="SemiBold"/>

        <TextBox Name="UsernameBox" Watermark="Username" />
        <TextBox Name="PasswordBox" Watermark="Password" PasswordChar="â€¢" />
        <CheckBox Name="IsAdminCheck" Content="Make this user admin" />
        
        <TextBlock Name="StatusText" />

        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
            <Button Content="Cancel" Click="Cancel_Click"/>
            <Button Content="Create" Click="Create_Click"/>
        </StackPanel>
    </StackPanel>

</Window>